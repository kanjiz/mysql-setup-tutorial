# Top-level .editorconfig file
# トップレベルの .editorconfig ファイル
root = true

# Default settings for all files
# すべてのファイルに対するデフォルト設定
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Settings for specific file types
# 特定のファイルタイプに対する設定

# Markdown files
# Markdownファイル
[*.md]
trim_trailing_whitespace = false

# Python files
# Pythonファイル
[*.py]
indent_size = 4

# JavaScript and TypeScript files
# JavaScriptおよびTypeScriptファイル
[*.{js,jsx,ts,tsx}]
indent_size = 2

# Batch files
# バッチファイル
[*.bat]
end_of_line = crlf
charset = utf-8

# PowerShell files
# PowerShellファイル
[*.ps1]
end_of_line = crlf
charset = utf-8-bom
indent_size = 4
